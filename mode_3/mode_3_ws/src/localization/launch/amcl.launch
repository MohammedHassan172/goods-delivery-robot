<?xml version="1.0"?>
<launch>
  <!-- AMCL -->
  <node pkg="amcl" type="amcl" name="amcl">
  <!-- <remap from="scan" to="scan"/> -->

  <!-- setting the names of the frames -->
  <param name="global_frame_id" value="map"/>
  <param name="odom_frame_id" value="odom"/>
  <param name="base_frame_id" value="base_link"/>
  <param name="use_map_topic" value="true"/>

  
  <param name="scan_topic"      value="scan"/>  
  <param name="min_particles"  value="100"/>
  <param name="max_particles"  value="5000"/>
  <param name="transform_tolerance"  value="0.5"/>

  <!-- setting the initial position and the angle from the center of the robot -->
  <param name="set_initial_pose"  value="false"/>
  <!-- <param name="initial_pose_x"  value="0.3"/>
  <param name="initial_pose_y"  value="0.30"/>
  <param name="initial_pose_a"  value="0"/>
  <param name="initial_cov_xx"  value="0.0005"/>
  <param name="initial_cov_yy"  value="0.0"/>
  <param name="initial_cov_aa"  value="0.00005"/> -->
  
  <!-- <param name="always_reset_initial_pose"  value="true"/> -->
    



  <!-- minimum distance and angle to update the position of the robot in the map -->
  <param name="update_min_d" value="0.0001"/>
  <param name="update_min_a" value="0.0001"/>
  
  <param name="odom_model_type" value="diff-corrected"/>
  <param name="tf_broadcast" value="true"/>


  <param name="recovery_alpha_slow"  value="0.1"/>
  <param name="recovery_alpha_fast"  value= "0.001"/>
  
  <param name="laser_z_hit"  value="0.95"/>
  <param name="laser_z_rand"  value="0.05"/>
  <param name="laser_sigma_hit"  value="0.2"/>
  <param name="laser_lambda_short"  value="0.1"/>
  <param name="laser_likelihood_max_dist"  value="30.0"/>
  <param name="laser_model_type"  value="likelihood_field"/>
  <!-- <param name="save_pose_rate"  value="40"/> -->
  

  <param name="laser_min_range"  value="0.1"/>
  <param name="laser_max_range"  value="30"/>
  <param name="laser_max_beams"  value="360"/>

  <param name="resample_interval"  value="2"/>
  <param name="gui_publish_rate"  value="10"/>
  <param name="sellective_resampling"  value="true"/>

   <param name="odom_alpha1"  value="0.2"/>
  <param name="odom_alpha2"  value="0.2"/>
  <param name="odom_alpha3"  value="0.2"/>
  <param name="odom_alpha4"  value="0.2"/>
  <!-- <param name="odom_alpha5"  value="0.02"/> -->
  
  </node>
</launch>
